{
  "name": "@icylace/uy",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "author": "Ron Martinez <ramartin.net@gmail.com>",
  "license": "ISC",
  "main": "./dist/index.js",
  "module": "./dist/index.min.mjs",
  "unpkg": "./dist/index.umd.min.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "hyperapp": "^2.0.4",
    "redaxios": "^0.2.0",
    "remeda": "0.0.19",
    "shades": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-typescript": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "rollup": "^2.6.1",
    "rollup-plugin-includepaths": "^0.2.3",
    "snowpack": "^1.7.0",
    "terser": "^4.6.11",
    "ts-jest": "^25.4.0",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3",
    "utility-types": "^3.10.0"
  },
  "scripts": {
    "build:basic": "npm run clean && npm run transpile:full && npm run bundle",
    "build:babel": "babel ./output/rollup --out-dir ./output/babel",
    "build:dist": "cp ./output/babel/* ./dist",
    "build:full": "npm run build:basic && npm run min && npm run gzip",
    "build:update": "npm run transpile:update && npm run bundle",

    "bundle": "npm run bundle:rollup && npm run build:babel && npm run build:dist",
    "bundle:rollup": "rollup --config",
    "bundle:watch": "rollup --config --watch",

    "check:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "check:types": "tsc --noEmit --incremental false",

    "clean": "npm run clean:dist && npm run clean:output",
    "clean:dist": "rm -fr ./dist && mkdir ./dist",
    "clean:output": "rm -fr ./output && mkdir ./output && mkdir ./output/terser && mkdir ./output/gzip",

    "gzip": "npm run gzip:esm && npm run gzip:umd",
    "gzip:esm": "gzip --best --to-stdout ./output/terser/index.min.js > ./output/gzip/index.min.js.gz",
    "gzip:umd": "gzip --best --to-stdout ./output/terser/index.umd.min.js > ./output/gzip/index.umd.min.js.gz",

    "min": "npm run min:esm && npm run min:umd",
    "min:esm": "terser --ecma 6 --compress --mangle --module --output ./output/terser/index.min.js -- ./output/rollup/index.js",
    "min:umd": "terser --ecma 6 --compress --mangle --output ./output/terser/index.umd.min.js -- ./output/rollup/index.umd.js",

    "prepare": "snowpack",

    "transpile:full": "tsc --build --incremental false",
    "transpile:update": "tsc --build",
    "transpile:watch": "tsc --watch"
  }
}
